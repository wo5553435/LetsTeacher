    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/menu_gray"/>
    <RelativeLayout
        android:id="@+id/layout_minefragment_signout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:clickable="true">

        <ImageView
            android:id="@+id/img_minefragment_signout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/icon_signout"/>

        <TextView
            android:id="@+id/tx_minefragment_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img_minefragment_signout"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/menu_text_pure"
            android:text="注销登录" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_fragment_rightgo" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/menu_gray"/>
</LinearLayout>