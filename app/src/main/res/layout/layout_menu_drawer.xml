<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="start|left"
    android:background="@color/menu_backroudgrey"
    android:clickable="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/menu_blue"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_menu"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#ffffff"
            app:civ_border_width="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:paddingTop="16dp"
                android:text=""
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_shopdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="5dp"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/menu_gray" />

    <RelativeLayout
        android:id="@+id/layout_minefragment_shopinfo"
        android:layout_width="fill_parent"

        android:layout_height="40dp"
        android:background="@color/white"
        android:clickable="true">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_minefragment_account"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_assignment_ind_black_24dp" />

        <TextView
            android:id="@+id/tx_minefragment_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/img_minefragment_account"
            android:layout_toRightOf="@+id/img_minefragment_account"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/login_str"
            android:textColor="@color/menu_text_pure" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_fragment_rightgo" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/menu_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:background="@color/menu_gray" />

    <RelativeLayout
        android:id="@+id/layout_minefragment_changeshop"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:visibility="visible"
        android:background="@color/white"
        android:clickable="true">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_minefragment_setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/icon_reflect"
            />

        <ImageView
            android:id="@+id/img_minefragment_go"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_fragment_rightgo" />

        <TextView
            android:id="@+id/tx_minefragment_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textColor="@color/menu_text_pure"
            android:layout_toRightOf="@+id/img_minefragment_setting"
            android:layout_marginStart="15dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/menu_gray" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/layout_minefragment_setting"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:background="@color/menu_gray" />
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:clickable="false">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_minefragment_gesture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:srcCompat="@mipmap/ic_launcher"
               />

            <TextView
                android:id="@+id/tx_minefragment_gesture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/menu_text_pure"
                android:layout_toRightOf="@+id/img_minefragment_gesture"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="微信绑定" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_fragment_rightgo" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:background="@color/menu_gray" />
    </LinearLayout>




