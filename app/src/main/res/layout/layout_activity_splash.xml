<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_blue"
    android:id="@+id/layout_splash_root">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_splash_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_color_lens_black_24dp"
        />
    <TextView
        android:id="@+id/tv_splash_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_splash_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
</RelativeLayout>