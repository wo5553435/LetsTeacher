<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="500">
    <slide
        android:slideEdge="top"
        >
        <targets>
            <target android:targetId="@id/layout_title"/>
        </targets>
    </slide>

    <slide android:slideEdge="left">
        <targets>
            <target android:targetId="@id/rv_searchfile_data"/>
        </targets>
    </slide>
    <fade>
        <targets >
            <target  android:targetId="@id/rv_searchfile_data"></target>
            <target android:targetId="@android:id/statusBarBackground"></target>
        </targets>
    </fade>
</transitionSet>