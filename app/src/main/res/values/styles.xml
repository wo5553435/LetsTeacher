<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/menu_blue</item>
        <item name="colorPrimaryDark">@color/menu_blue</item>
        <item name="colorAccent">@color/menu_red</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="NoActionBar" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>



    <!-- 等待层样式 -->
    <style name="WaitingDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <declare-styleable name="Follow">
        <attr name="target" format="reference"/>
    </declare-styleable>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeA" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/menu_blue</item>
        <item name="colorPrimaryDark">@color/menu_blue</item>
        <item name="colorAccent">@color/colorAccent</item>

        //沉浸状态栏
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        //可以让appbarlayout从最顶上开始，状态栏会覆盖toolbar

        //ActionBarDrawerToggle设置颜色
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.ExploreEx" parent="AppTheme.NoActionBar">
        <!--<item name="android:windowExitTransition" tools:targetApi="lollipop">@transition/explode</item>-->
        <!--<item name="android:windowEnterAnimation">@transition/explode</item>-->
        <!--<item name="android:windowReenterTransition" tools:targetApi="lollipop">@transition/explode</item>-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="DialogEmptyAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@null</item>
        <item name="@android:windowExitAnimation">@null</item>
    </style>
</resources>
